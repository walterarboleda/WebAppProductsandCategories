@model IEnumerable<WebAppProductsandCategories.Models.Category>

<h1>Categories</h1>

<a href="@Url.Action("Create")">Create New Category</a>

<table>
    <thead>
        <tr>
            <th>CategoryId</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.Name</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = category.CategoryId })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = category.CategoryId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
